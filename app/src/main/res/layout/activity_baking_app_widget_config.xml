<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.BakingAppWidgetConfig">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/master_margin"
        android:gravity="center"
        android:text="@string/select_recipe"
        android:textSize="@dimen/widget_text_size" />

    <Spinner
        android:id="@+id/widget_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/master_margin" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/master_margin"
        android:onClick="confirmConfiguration"
        android:text="@string/select_recipe_button" />
</LinearLayout>