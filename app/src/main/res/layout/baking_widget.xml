<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/widget_baking_button"
            android:layout_width="@dimen/weight_thickness"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/choose_recipe" />

        <ImageView
            android:id="@+id/widget_baking_image"
            android:layout_width="@dimen/weight_thickness"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/master_margin"
            android:layout_weight="1"
            android:contentDescription="@string/launch_application"
            android:src="@drawable/ic_cupcake" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_baking_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark" />


    <ListView
        android:id="@+id/widget_baking_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/widget_baking_empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:text="@string/empty"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold" />


</LinearLayout>