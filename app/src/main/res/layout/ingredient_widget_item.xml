<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout style="@style/IngredientWidgetItemLayout">

        <TextView
            style="@style/IngredientItemTextViewTitle"
            android:text="@string/quantity" />

        <TextView
            android:id="@+id/quantity_value"
            style="@style/IngredientItemTextViewValue"
            tools:text="quantity value" />
    </LinearLayout>

    <LinearLayout style="@style/IngredientWidgetItemLayout">

        <TextView
            style="@style/IngredientItemTextViewTitle"
            android:text="@string/measure" />

        <TextView
            android:id="@+id/measure_value"
            style="@style/IngredientItemTextViewValue"
            tools:text="measure value" />
    </LinearLayout>

    <LinearLayout style="@style/IngredientWidgetItemLayout">

        <TextView
            style="@style/IngredientItemTextViewTitle"
            android:text="@string/ingredient" />

        <TextView
            android:id="@+id/ingredient_value"
            style="@style/IngredientItemTextViewValue"
            tools:text="ingredient value" />
    </LinearLayout>
</LinearLayout>